@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container h-100 ">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <!-- Form -->
            <form id="account" method="post">
                <img class="logo" src="../../Image/Logo.png" />
                <p class="logo-name">SerenUP</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- Input fields -->
                <div class="form-group">
                    <input asp-for="Input.Email" class="credenziali-username p-1" autocomplete="current-username" aria-required="true" placeholder="   Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="credenziali-password p-1" autocomplete="current-password" aria-required="true" placeholder="   Password" />
                     <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label label-remember" style="color:black">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn-input">Log in</button>
                <!-- End input fields -->
            </form>
            <!-- Form end -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
