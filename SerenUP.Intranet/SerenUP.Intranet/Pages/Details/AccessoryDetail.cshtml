@page "{name}/{color}"
@model SerenUP.Intranet.Pages.AccessoryDetailModel
@{
}


<center>
<form  class="row g-3 w-25" method="PUT">

    <div style="width:200px;">
         <a asp-page="Details/AccessoryDetail">
            <img style="width:100%" class="icon_details" src=@Model.Accessory.Link>
         </a>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col">
                <label class="form-label" >Name:</label>
            </div>
              <div class="col">
                  <input type="text" class="form-control" value="@Model.Accessory.Name" />
            </div>
        </div>

         <div class="row">
            <div class="col">
                <label class="form-label" >Price:</label>
            </div>
              <div class="col">
                  <input type="text" class="form-control" value="@Model.Accessory.Price" />
            </div>
        </div>

         <div class="row">
            <div class="col">
                <label class="form-label" >Color:</label>
            </div>
              <div class="col">
                  <input type="text" class="form-control" value="@Model.Accessory.Color" />
            </div>
        </div>

         <div class="row">
            <div class="col">
                <label class="form-label" >Quantity:</label>
            </div>
              <div class="col">
                  <input type="text" class="form-control" value="@Model.Accessory.Quantity" />
            </div>
        </div>
          
         <div class="row">
             <div class="col">
                <button type="submit" class="btn btn-primary mb-3">
                     <a asp-page="../ProductList">
                                    Return
                     </a>
                </button>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary mb-3">Update</button>
            </div>
        </div>
       
    </div>
</form>
</center>

